<h2>Welcome <%= @member.username %></h2>
<div style="width: 200px; border: 1px solid black; padding: 10px; display: inline-block; vertical-align: top;">
  <h2>Stats</h2>
    <%= form_for @member do |f|%>
    <p>
      <%= f.label :calorie_intake, "Calorie Intake"%>
      <%= f.number_field :calorie_intake%>
    </p>
    <p>
      <%= f.submit "Update Calories" %>
    </p>
    <%end%>
    <% daily_calorie_percent = @member.calorie_intake.to_f/2000*100%>
  <div style="width: 200px; height: 50px; background: linear-gradient(to right, red 0%, red <%= daily_calorie_percent%>%, white <%= daily_calorie_percent%>%); border: 1px solid black;"></div>
  <%= form_for @member do |f|%>
  <p>
    <%= f.label :minutes_exercised , "Minutes Exercised"%>
    <%= f.number_field :minutes_exercised %>
  </p>
  <p>
    <%= f.submit "Update Exercise" %>
  </p>
  <%end%>
  <div style="width: 200px; height: 50px; background: linear-gradient(to right, red 0%, red <%= @member.minutes_exercised %>%, white <%= @member.minutes_exercised %>%); border: 1px solid black;"></div>
  <%= form_for @member do |f|%>
  <p>
    <%= f.label :journal_num_entries , "Journal Entries"%>
    <%= f.number_field :journal_num_entries %>
  </p>
  <p>
    <%= f.submit "Update Journaling" %>
  </p>
  <%end%>
  <div style="width: 200px; height: 50px; background: linear-gradient(to right, red 0%, red <%= @member.journal_num_entries %>%, white <%= @member.journal_num_entries %>%); border: 1px solid black;"></div>
</div>
<div style="width: 200px; height: 200px; border: 1px solid black; padding: 10px; display: inline-block; vertical-align: top;">
  <h2>Live Feed Contributions</h2>
  <h3>(count)</h3>
</div>
<div style="width: 200px; height: 200px; border: 1px solid black; padding: 10px; display: inline-block; vertical-align: top;">
  <h2>Journal</h2>
  <h3>(count)</h3>
</div>
<%= link_to "<= Back to Main Page", root_path%>
